# Dockerfile for Producer Service
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy application code
COPY . .

# Create avatars directory
RUN mkdir -p public/avatars

# Expose port
EXPOSE 4000

# Start producer
CMD ["node", "src/app-producer.cjs"]
